<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarotora.DeleteUser"
             Title="DeleteUser">
    <CollectionView x:Name="UsersView" Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="5" CornerRadius="10" HasShadow="True">
                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                        <Label Text="{Binding Name}" FontSize="18" VerticalOptions="Center"/>
                        <Button Text="Редактировать" CommandParameter="{Binding .}" Clicked="OnEditClicked"/>
                        <Button Text="Удалить" CommandParameter="{Binding .}" Clicked="OnDeleteClicked"/>
                    </HorizontalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>