<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarotora.MainPage" BackgroundColor="Violet"  >

    <VerticalStackLayout Padding="20" Spacing="10">


        <Label x:Name="Display"/>



        <Grid Grid.Row="2">

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
               
            </Grid.ColumnDefinitions>

        </Grid>
        <StackLayout>

           
            <Label Text="ТароTora" Grid.Column="2" Grid.Row="4" HorizontalOptions ="Center" TextColor="Black" FontSize="50"/>
            <Button  Text="Добавить карту" Clicked="Addkard" Grid.Row="5" Grid.Column="2" HorizontalOptions ="Center" TextColor="Black" FontSize="30"/>
            <Button   Text="Просмотр колоды" Clicked="Prosmotrkolod" Grid.Row="8" Grid.Column="2" HorizontalOptions ="Center" TextColor="Black" FontSize="30"/>
            <Button   Text="Проверка" Clicked="Check" Grid.Row="8" Grid.Column="2" HorizontalOptions ="Center" TextColor="Black" FontSize="30"/>
           



        </StackLayout>







    </VerticalStackLayout>


</ContentPage>
