<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarotora.MainPage" Title="Профиль пользователя"
             Background="LightPink">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Frame BackgroundColor="White" CornerRadius="20" Padding="15" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label x:Name="UserNameLabel" FontSize="28" FontAttributes="Bold" TextColor="Black"/>
                    <Label x:Name="UserSubscribeLabel" FontSize="16" TextColor="Gray"/>
                    <Label x:Name="UserProgressLabel" FontSize="16" TextColor="Gray"/>
                    <Button Text="Редактировать профиль"
                            BackgroundColor="HotPink" TextColor="White"
                            CornerRadius="20" Clicked="OnEditProfileClicked"/>
                </VerticalStackLayout>
            </Frame>

            <Label Text="Пройденные карты:" FontSize="20" FontAttributes="Bold" TextColor="Black"/>

            <CollectionView x:Name="CompletedCardsView" SelectionMode="None" ItemsLayout="VerticalList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White" CornerRadius="20" Padding="15" Margin="0,5" HasShadow="True">
                            <HorizontalStackLayout Spacing="10">
                                <Image Source="{Binding Image}" HeightRequest="60" WidthRequest="60"/>
                                <VerticalStackLayout>
                                    <Label Text="{Binding Title}" FontSize="18" TextColor="Black"/>
                                    <Label Text="{Binding Description}" FontSize="14" TextColor="Gray"/>
                                    <Label Text="{Binding Progress, StringFormat='Пройдено: {0}%'}" FontSize="14" TextColor="Blue"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
