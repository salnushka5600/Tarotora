<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarotora.RegistrationPage"
             Title="Registration">
    <ScrollView>
        
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" WidthRequest="350">

            <Entry x:Name="NameEntry" Placeholder="Имя"/>
            <Entry x:Name="LoginEntry" Placeholder="Логин"/>
            <Entry x:Name="PasswordEntry" Placeholder="Пароль" IsPassword="True"/>
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Label Text="Подписка"/>
                <Switch x:Name="SubscriptionSwitch"/>
            </StackLayout>
            <Button Text="Зарегистрироваться" Clicked="Registration"/>
            <Button Text="Назад к входу" Clicked="Login"/>
        </VerticalStackLayout>

    </ScrollView>
</ContentPage>