<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarotora.Prosmotrkolod"
             Title="Prosmotrkolod" Background="LightPink">

    <ScrollView>
        <StackLayout>

            <ListView ItemsSource="{Binding Cards}">
                    <ListView.ItemTemplate>
                                   <DataTemplate>
                        <Button Text="🔧" CommandParameter="{Binding}" Clicked="CardEdit" Background="Black" WidthRequest="50" HeightRequest="50"/>
                                    </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            <Label Text="Название" TextColor ="Black" HorizontalOptions ="Center" />
            <Entry  Height="30" Width="250" Margin="0,10,0,0" Grid.Row="3"  Background="#FFF4D2D7"/>
            <Label Text="Описание" TextColor ="Black" HorizontalOptions ="Center" />
            <Entry  Height="30" Width="250" Margin="0,10,0,0" Grid.Row="3"  Background="#FFF4D2D7"/>
            
                <Image Source="fool.png"  Aspect="AspectFit" HeightRequest="500" />
                <Image Source="emperor.png" VerticalOptions="End" Aspect="Center"/>
                <Image Source="empress.png" VerticalOptions="End" Aspect="Center"/>
                <Image Source="hierophant.png"  VerticalOptions="End" Aspect="Center" />
                <Image Source="highpriestess.png" VerticalOptions="End" Aspect="Center" />
                <Image Source="mag.png"  VerticalOptions="End" Aspect="Center" />


            <CarouselView Loop="True" BindingContext="{Binding Cards}">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Image Source="Images/{Binding ImageSource}" Aspect="AspectFit" HeightRequest="500"/>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
            <Label Text="Подписка" TextColor="Black"/>
            <Switch IsToggled="False" ThumbColor="Black" OnColor="HotPink" Toggled="Switch_Toggled" />

            <ScrollView AutomationId="5" VerticalOptions="End"/>

        </StackLayout>
    </ScrollView>
</ContentPage>


