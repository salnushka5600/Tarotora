<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarotora.Check"
             Title="Check" Background="LightPink">
    <VerticalStackLayout>
        <Label Text="Имя пользователя" TextColor="Black" HorizontalOptions="Center"/>
        <Entry HeightRequest="30" WidthRequest="250" Margin="0,10,0,0" Background="Pink" />
        <Label x:Name="PercentageLabel" Text="0%" TextColor="Black" HorizontalOptions="Center" Margin="0,10,0,0"/>
        <Slider x:Name="Slider" Minimum="0" Maximum="100" Value="50" IsEnabled="False"/>
        <Label Text="Выберите пользователя:" TextColor="Black" HorizontalOptions="Center" Margin="0,10,0,0"/>
        <ListView x:Name="UsersListView" 
                  ItemSelected="OnUserSelected"
                  Margin="0,10,0,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell  Detail="{Binding Id}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>