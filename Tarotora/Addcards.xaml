<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarotora.Addcards"
             Title="Addcard" Background="LightPink">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Добавление карты"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black" />

            <Entry x:Name="Titl"
                   Placeholder="Название карты"
                   FontSize="18"
                   BackgroundColor="White"
                   TextColor="Black"
                   Margin="0,10,0,0"
                   />

            <Editor x:Name="Descrip"
                    Placeholder="Описание карты"
                    FontSize="16"
                    BackgroundColor="White"
                    TextColor="Black"
                    AutoSize="TextChanges"
                    HeightRequest="120" />

            <Entry x:Name="ImageEntry"
                   Placeholder="Путь к изображению (например: fool.png)"
                   FontSize="16"
                   BackgroundColor="White"
                   TextColor="Black" />

            <Image x:Name="PreviewImage"
                   HeightRequest="200"
                   Aspect="AspectFit"
                   IsVisible="False" />

            <Button Text="Показать изображение"
                    Clicked="OnPreviewClicked"
                    BackgroundColor="#D98AF9"
                    TextColor="White"
                    CornerRadius="20"
                    FontSize="18" />

            <Button Text="💾 Сохранить карту"
                    Clicked="OnSaveClicked"
                    BackgroundColor="#9C4EF5"
                    TextColor="White"
                    CornerRadius="20"
                    FontSize="18" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
    
    